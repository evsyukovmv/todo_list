<h1>All tasks</h1>

<ul class="task">
  <% @tasks.each do |task| %>
    <li>
      <%= task.name %>
      <%= task.description %>
      <%= task.priority %>
      <%= task.state? %>
      <td><%= link_to 'Show', [@task_list, task] %></td>
      <td><%= link_to 'Edit', edit_task_list_task_url(@task_list, task) %></td>
      <td><%= link_to 'Destroy', [@task_list, task], confirm: 'Are you sure?', method: :delete %></td>
    </li>
  <% end %>
</ul>
<%= link_to 'New task', new_task_list_task_path %>