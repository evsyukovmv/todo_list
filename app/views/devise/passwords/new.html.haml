.row
  .span4.offset4
    %h2
      Forgot your password?
    %br
    = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
      = devise_error_messages!
      .field
        = f.label :email
        = f.email_field :email
      .field
        = f.submit "Send me reset password instructions", class: 'btn-success'
        %br
        = render "links"
