= form_for [@project, @task_list] do |f|
  - if @task_list.errors.any?
    #error_explanation
      %h2
        = pluralize(@task_list.errors.count, "error")
        prohibited this task list from being saved:
      %ul
      - @task_list.errors.full_messages.each do |msg|
        %li
          = msg
  .field
    = f.label :name
    %br
    = f.text_field :name
  .field
    = f.label :description
    %br
    = f.text_area :description
  .actions
    = f.submit