<div class="row">
  <div class="span6 offset3">
    <h2>Editing task list</h2>
    <form id="edit-task_list" name="task_list" class="well">
      <div class="actions">
        <div class="field">
          <label>Name:</label>
          <input type="text" name="name" value="<%= name %>" />
        </div>
        <div class="field">
          <label>Description:</label>
          <textarea name="description"><%= description %></textarea>
        </div>
        <input type="submit" value="Update task list" class="btn-primary" />
      </div>
    </form>
  </div>
</div>

<div id="back" class="nav"></div>